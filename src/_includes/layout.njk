{% extends "base.njk" %}
{% block content %}
  <h1 class="post-title">{{ title }}</h1>
  {% if image %}
    <img src="{{ image }}" alt="{{ title }}" class="post-main-image" />
  {% endif %}
  {% if instruction %}
    <button class="instruction-button" onclick="window.open('{{ instruction }}', '_blank')">
      {{ translations[language].button }}
    </button>
  {% endif %}
  <div class="post-content">
    {{ content | safe }}
  </div>
  <!-- If tags contain moc or post -->
  {% if tags and (tags.includes("moc") or tags.includes("post")) %}
    <script src="https://giscus.app/client.js"
            data-repo="legofan-pl/website"
            data-repo-id="R_kgDOPPxWew"
            data-category="Announcements"
            data-category-id="DIC_kwDOPPxWe84CteRB"
            data-mapping="pathname"
            data-strict="0"
            data-reactions-enabled="1"
            data-emit-metadata="0"
            data-input-position="bottom"
            data-theme="preferred_color_scheme"
            data-lang={{ language }}
            crossorigin="anonymous"
            async>
    </script>
  {% endif %}
{% endblock %}